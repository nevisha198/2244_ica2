pipeline {
    agent any
    environment {
        DOCKER_REPO = "nevisha/2244_ica2"
    }
    stages {
        stage('Pull Docker Image') {
            steps {
                sh 'docker pull nevisha/2244_ica2:latest'
            }
        }
        stage('Stop and Remove Old Container') {
            steps {
                script {
                    sh '''
                    if [ $(docker ps -aq -f name=laughing_shamir) ]; then
                        docker stop laughing_shamir || true
                        docker rm laughing_shamir || true
                    fi
                    '''
                }
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8082:80 nevisha/2244_ica2:latest'
            }
        }
        stage('Test') {
            steps {
                sh 'curl -I localhost:8082'
            }
        }
    }
}
